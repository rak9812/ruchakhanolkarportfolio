              <!-- Divider -->
              <hr class="border-gray-200">

              <!-- Team Goals + Interests -->
              <div class="section">
                <h3 class="text-xl font-medium text-gray-900 mb-4">Team Goals + Interests</h3>
                <div class="text-content">
                  <h4 class="text-lg font-medium text-gray-900 mb-2">Initial Goals</h4>
                  <ul class="list-disc list-inside text-gray-700 mb-4 space-y-1">
