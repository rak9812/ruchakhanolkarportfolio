---
import Layout from '../layouts/Layout.astro';

const ceramicPieces = [
  {
    title: "Ocean Wave Bowl",
    description: "Hand-thrown stoneware bowl with blue glaze reminiscent of ocean waves",
    image: "gradient-to-br from-blue-400 to-blue-600",
    category: "Bowls",
    year: "2024"
  },
  {
    title: "Rustic Vase Set",
    description: "Set of three vases with earthy terra cotta finish",
    image: "gradient-to-br from-orange-400 to-red-500",
    category: "Vases",
    year: "2024"
  },
  {
    title: "Minimalist Mug",
    description: "Clean lines and smooth white glaze for everyday use",
    image: "gradient-to-br from-gray-200 to-gray-400",
    category: "Mugs",
    year: "2023"
  },
  {
    title: "Textured Planter",
    description: "Large planter with carved geometric patterns",
    image: "gradient-to-br from-green-400 to-green-600",
    category: "Planters",
    year: "2024"
  },
  {
    title: "Dinner Plate Collection",
    description: "Set of handmade plates with speckled glaze",
    image: "gradient-to-br from-amber-300 to-orange-400",
    category: "Plates",
    year: "2023"
  },
  {
    title: "Decorative Sculpture",
    description: "Abstract form exploring balance and negative space",
    image: "gradient-to-br from-purple-400 to-indigo-500",
    category: "Sculptures",
    year: "2024"
  },
  {
    title: "Tea Set",
    description: "Complete tea service with matching cups and teapot",
    image: "gradient-to-br from-rose-300 to-pink-400",
    category: "Sets",
    year: "2023"
  },
  {
    title: "Large Serving Bowl",
    description: "Generous bowl perfect for family gatherings",
    image: "gradient-to-br from-yellow-400 to-orange-500",
    category: "Bowls",
    year: "2024"
  },
  {
    title: "Sake Cups",
    description: "Traditional-inspired sake cups with modern twist",
    image: "gradient-to-br from-slate-400 to-slate-600",
    category: "Cups",
    year: "2023"
  }
];

const categories = ["All", "Bowls", "Vases", "Mugs", "Planters", "Plates", "Sculptures", "Sets", "Cups"];
---

<Layout title="Ceramics - Portfolio" description="Handcrafted ceramic art and pottery pieces">
  <!-- Header Section -->
  <section class="py-20 bg-gradient-to-br from-amber-50 to-orange-50">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-6">
          Ceramics Gallery
        </h1>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto mb-8">
          Handcrafted pottery and ceramic art pieces, each shaped with intention and 
          fired with care. Exploring form, function, and the meditative nature of clay.
        </p>
        <div class="flex justify-center">
          <div class="bg-white rounded-lg p-6 shadow-sm">
            <p class="text-sm text-gray-500 mb-2">Studio Location</p>
            <p class="font-medium text-gray-900">Local Pottery Studio</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- About Ceramics Section -->
  <section class="py-16 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h2 class="text-3xl font-bold text-gray-900 mb-6">The Art of Clay</h2>
        <p class="text-lg text-gray-600 mb-8">
          Working with clay is a journey of patience and discovery. Each piece begins as a formless mass 
          and transforms through the ancient alchemy of earth, water, and fire. My ceramic work explores 
          the balance between functionality and artistic expression.
        </p>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 text-center">
          <div>
            <div class="w-16 h-16 bg-amber-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-amber-600" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h3 class="font-semibold text-gray-900 mb-2">Hand-thrown</h3>
            <p class="text-gray-600 text-sm">Each piece is individually crafted on the pottery wheel</p>
          </div>
          <div>
            <div class="w-16 h-16 bg-orange-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-orange-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M12.395 2.553a1 1 0 00-1.45-.385c-.345.23-.614.558-.822.88-.214.33-.403.713-.57 1.116-.334.804-.614 1.768-.84 2.734a31.365 31.365 0 00-.613 3.58 2.64 2.64 0 01-.945-1.067c-.328-.68-.398-1.534-.398-2.654A1 1 0 005.05 6.05 6.981 6.981 0 003 11a7 7 0 1011.95-4.95c-.592-.591-.98-.985-1.348-1.467-.363-.476-.724-1.063-1.207-2.03zM12.12 15.12A3 3 0 017 13s.879.5 2.5.5c0-1 .5-4 1.25-4.5.5 1 .786 1.293 1.371 1.879A2.99 2.99 0 0113 13a2.99 2.99 0 01-.879 2.121z" clip-rule="evenodd"></path>
              </svg>
            </div>
            <h3 class="font-semibold text-gray-900 mb-2">Kiln-fired</h3>
            <p class="text-gray-600 text-sm">High-temperature firing creates durable, functional pieces</p>
          </div>
          <div>
            <div class="w-16 h-16 bg-rose-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-rose-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd"></path>
              </svg>
            </div>
            <h3 class="font-semibold text-gray-900 mb-2">Made with Love</h3>
            <p class="text-gray-600 text-sm">Every piece carries the maker's intention and care</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Filter Section -->
  <section class="py-8 bg-gray-50 border-b border-gray-200">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex flex-wrap justify-center gap-3">
        {categories.map((category, index) => (
          <button class={`filter-btn px-4 py-2 rounded-full text-sm font-medium transition-colors ${index === 0 ? 'active bg-gray-900 text-white' : 'bg-white text-gray-700 hover:bg-gray-100'}`}>
            {category}
          </button>
        ))}
      </div>
    </div>
  </section>

  <!-- Gallery Grid -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8" id="gallery-grid">
        {ceramicPieces.map((piece) => (
          <div class="group bg-white rounded-lg shadow-sm hover:shadow-lg transition-all duration-300 overflow-hidden ceramic-item" data-category={piece.category}>
            <div class={`w-full h-64 bg-${piece.image} relative overflow-hidden`}>
              <div class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-30 transition-all duration-300 flex items-center justify-center">
                <button class="opacity-0 group-hover:opacity-100 transition-opacity duration-300 bg-white text-gray-900 px-4 py-2 rounded-full text-sm font-medium gallery-btn" data-title={piece.title} data-description={piece.description}>
                  View Details
                </button>
              </div>
              <div class="absolute top-4 right-4">
                <span class="bg-white bg-opacity-90 text-gray-700 px-2 py-1 rounded-full text-xs font-medium">
                  {piece.year}
                </span>
              </div>
            </div>
            <div class="p-6">
              <div class="flex justify-between items-start mb-2">
                <h3 class="text-lg font-semibold text-gray-900">{piece.title}</h3>
                <span class="text-xs text-gray-500 bg-gray-100 px-2 py-1 rounded-full">
                  {piece.category}
                </span>
              </div>
              <p class="text-gray-600 text-sm">{piece.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Process Section -->
  <section class="py-20 bg-white">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">The Creative Process</h2>
        <p class="text-lg text-gray-600">From clay to finished piece</p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
        <div class="text-center">
          <div class="w-20 h-20 bg-amber-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-2xl font-bold text-amber-600">1</span>
          </div>
          <h3 class="font-semibold text-gray-900 mb-2">Preparation</h3>
          <p class="text-gray-600 text-sm">Wedging and preparing the clay, centering on the wheel</p>
        </div>
        <div class="text-center">
          <div class="w-20 h-20 bg-orange-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-2xl font-bold text-orange-600">2</span>
          </div>
          <h3 class="font-semibold text-gray-900 mb-2">Throwing</h3>
          <p class="text-gray-600 text-sm">Shaping the clay on the pottery wheel with hands and tools</p>
        </div>
        <div class="text-center">
          <div class="w-20 h-20 bg-red-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-2xl font-bold text-red-600">3</span>
          </div>
          <h3 class="font-semibold text-gray-900 mb-2">Glazing</h3>
          <p class="text-gray-600 text-sm">Applying glazes and decorative finishes</p>
        </div>
        <div class="text-center">
          <div class="w-20 h-20 bg-rose-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-2xl font-bold text-rose-600">4</span>
          </div>
          <h3 class="font-semibold text-gray-900 mb-2">Firing</h3>
          <p class="text-gray-600 text-sm">High-temperature kiln firing to complete the transformation</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="py-20 bg-amber-50">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold text-gray-900 mb-6">
        Interested in Custom Work?
      </h2>
      <p class="text-lg text-gray-600 mb-8">
        I accept commissions for custom ceramic pieces. Whether you're looking for 
        functional pottery or decorative art, let's discuss your vision.
      </p>
      <a href="/contact" class="inline-flex items-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-white bg-gray-900 hover:bg-gray-800 transition-colors">
        Commission a Piece
      </a>
    </div>
  </section>
</Layout>

<script>
  // Filter functionality
  document.addEventListener('DOMContentLoaded', function() {
    const filterButtons = document.querySelectorAll('.filter-btn');
    const ceramicItems = document.querySelectorAll('.ceramic-item');
    
    filterButtons.forEach(button => {
      button.addEventListener('click', function() {
        const category = this.textContent.trim();
        
        // Remove active class from all buttons
        filterButtons.forEach(btn => {
          btn.classList.remove('active', 'bg-gray-900', 'text-white');
          btn.classList.add('bg-white', 'text-gray-700');
        });
        
        // Add active class to clicked button
        this.classList.add('active', 'bg-gray-900', 'text-white');
        this.classList.remove('bg-white', 'text-gray-700');
        
        // Filter items
        ceramicItems.forEach(item => {
          if (category === 'All' || item.dataset.category === category) {
            item.style.display = 'block';
          } else {
            item.style.display = 'none';
          }
        });
      });
    });
    
    // Gallery detail view (simple alert for demo)
    const galleryButtons = document.querySelectorAll('.gallery-btn');
    galleryButtons.forEach(button => {
      button.addEventListener('click', function(e) {
        e.preventDefault();
        const title = this.dataset.title;
        const description = this.dataset.description;
        alert(`${title}\n\n${description}`);
      });
    });
  });
</script>

