<Layout title="Portfolio - Rucha Khanolkar" description="UX design portfolio showcasing digital projects and user experience work">
  <!-- Header Section -->
  <section class="py-20">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl sm:text-5xl font-light text-gray-900 mb-6">
          Portfolio
        </h1>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          A collection of UX design projects, web development work, and creative explorations 
          spanning various technologies and design disciplines.
        </p>
      </div>
    </div>
  </section>

  <!-- Recent Work Section -->
  <section class="py-16">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-2xl font-normal text-gray-900 mb-12">
        Recent work
      </h2>
      
      <div class="space-y-8">
        {recentProjects.map((project) => (
          <div class="border-b border-gray-200 pb-8">
            <div class={`w-full h-64 bg-${project.image} rounded-lg mb-4 group cursor-pointer`}>
              <div class="w-full h-full bg-black bg-opacity-0 group-hover:bg-opacity-10 transition-all duration-300 rounded-lg flex items-center justify-center">
                <a href={project.link} class="opacity-0 group-hover:opacity-100 transition-opacity duration-300 bg-white text-gray-900 px-4 py-2 rounded-full text-sm font-medium">
                  View Project
                </a>
              </div>
            </div>
            <p class="text-gray-600 text-sm mb-2">
              <span class="font-medium">{project.category}</span>
            </p>
            <h3 class="text-lg font-medium text-gray-900 mb-2">{project.title}</h3>
            <p class="text-gray-600 text-sm">{project.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Archived Work Section -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-2xl font-normal text-gray-900 mb-12">
        Archived work
      </h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {archivedProjects.map((project) => (
          <div class="bg-white rounded-lg p-6 group cursor-pointer hover:shadow-md transition-shadow duration-300">
            <div class={`w-full h-48 bg-${project.image} rounded-lg mb-4`}>
              <div class="w-full h-full bg-black bg-opacity-0 group-hover:bg-opacity-10 transition-all duration-300 rounded-lg flex items-center justify-center">
                <a href={project.link} class="opacity-0 group-hover:opacity-100 transition-opacity duration-300 bg-white text-gray-900 px-4 py-2 rounded-full text-sm font-medium">
                  View Project
                </a>
              </div>
            </div>
            <p class="text-gray-600 text-sm mb-2">
              <span class="font-medium">{project.category}</span>
            </p>
            <h3 class="text-base font-medium text-gray-900 mb-2">{project.title}</h3>
            <p class="text-gray-600 text-xs">{project.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Contact CTA Section -->
  <section class="py-20">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
