---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Rucha Khanolkar - UX Designer">
  <div style="background-color: #d3edc5; min-height: 100vh; display: flex; align-items: center; justify-content: center;">
    <!-- Hero Section -->
    <section class="w-full py-8">
    <div class="max-w-5xl mx-auto px-6 sm:px-8 lg:px-12">
      <div class="flex flex-col lg:flex-row lg:justify-between lg:items-center gap-12">
        <!-- Text Content - Top Left -->
        <div class="text-left flex-1">
          <h1 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-gray-900 mb-6 leading-tight">
            Hi, I'm Rucha!
          </h1>
          <p class="text-lg sm:text-xl text-gray-700 font-light max-w-2xl mb-6">
            I'm a product manager who thrives at the intersection of design and technology, turning complex problems into simple solutions.
          </p>
          <p class="text-sm text-gray-600 mb-12">
            ðŸ“š <a href="https://www.goodreads.com/user/show/125144933-rucha" target="_blank" rel="noopener noreferrer" class="hover:text-gray-800 transition-colors">What I'm reading right now.</a>
          </p>
          
          <!-- Navigation Links -->
          <div class="navigation-links flex flex-wrap gap-3 mt-8">
            <button onclick="openSidePanel('work')" class="px-4 py-2 bg-gray-100 text-gray-700 rounded-full hover:bg-gray-200 transition-colors text-sm font-medium cursor-pointer">
              Work
            </button>
            <button onclick="openSidePanel('ceramics')" class="px-4 py-2 bg-gray-100 text-gray-700 rounded-full hover:bg-gray-200 transition-colors text-sm font-medium cursor-pointer">
              Ceramics
            </button>
            <button onclick="openSidePanel('archived')" class="px-4 py-2 bg-gray-100 text-gray-700 rounded-full hover:bg-gray-200 transition-colors text-sm font-medium cursor-pointer">
              Archived
            </button>
            <button onclick="openSidePanel('aboutme')" class="px-4 py-2 bg-gray-100 text-gray-700 rounded-full hover:bg-gray-200 transition-colors text-sm font-medium cursor-pointer">
              About Me
            </button>
          </div>
        </div>
        
        <!-- Illustration - Right Side -->
        <div class="hidden lg:flex justify-center lg:justify-end flex-shrink-0">
          <div class="w-72 h-80 max-w-full">
            <img 
              src="/ruchakhanolkarportfolio/rucha.png" 
              alt="Illustrated portrait of Rucha" 
              class="w-full h-full object-contain"
            />
          </div>
        </div>
      </div>
    </div>
    </section>
  </div>

  <!-- Side Panel Overlay -->
  <div id="sidePanel" class="fixed inset-0 z-50 hidden">
    <!-- Backdrop -->
    <div class="absolute inset-0 bg-black bg-opacity-50" onclick="closeSidePanel()"></div>
    
    <!-- Side Panel -->
    <div class="absolute right-0 top-0 h-full w-full md:w-1/2 bg-white shadow-2xl transform translate-x-full transition-transform duration-300 ease-in-out" id="sidePanelContent">
      <!-- Header -->
      <div class="flex items-center justify-between p-4 md:p-6 border-b border-gray-200">
        <h2 id="sidePanelTitle" class="text-lg md:text-xl font-light text-gray-900"></h2>
        <button onclick="closeSidePanel()" class="p-3 md:p-2 hover:bg-gray-100 rounded-full transition-colors">
          <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
      
      <!-- Content -->
      <div class="p-4 md:p-6 overflow-y-auto h-full pb-32 md:pb-80" id="sidePanelBody">
        <!-- Dynamic content will be loaded here -->
      </div>
    </div>
  </div>
</Layout>


